<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tena.untact2021.dao.MemberDao">

	<!-- 회원 가입 -->
	<insert id="save" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `member`
		SET
			regDate = NOW(),
			updateDate = NOW(),
			loginId = #{loginId},
            loginPw = #{loginPw},
            `name` = #{name},
            nickname = #{nickname},
            cellphoneNo = #{cellphoneNo},
            email = #{email},
            authKey = CONCAT("authKey1__", UUID(), "__", RAND())
	</insert>

    <!-- 회원 조회 (PK) -->
    <select id="findById" resultType="Member">
        SELECT *
        FROM `member`
        WHERE
            id = #{id}
    </select>

    <!-- 회원 조회 (로그인 ID) -->
    <select id="findByLoginId" resultType="Member">
        SELECT *
        FROM `member`
        WHERE
            loginId = #{loginId}
    </select>

    <!-- 회원 조회 (authKey) -->
    <select id="findByAuthKey" resultType="Member">
        SELECT *
        FROM `member`
        WHERE
            authKey = #{authKey}
    </select>

    <!-- 회원 정보 수정 -->
    <update id="update" >
        UPDATE `member`
        <set>
            <if test="loginPw != null || loginPw != null || name != null || nickname != null || cellphoneNo != null || email != null">
                updateDate = NOW(),
            </if>
            <if test="loginPw != null">
                loginPw = #{loginPw},
            </if>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="nickname != null">
                nickname = #{nickname},
            </if>
            <if test="cellphoneNo != null">
                cellphoneNo = #{cellphoneNo},
            </if>
            <if test="email != null">
                email = #{email}
            </if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
